#%Module

if { [ is-loaded anaconda3 ] } { module unload anaconda3 }

module load pgi/19.5/64
module load openmpi/pgi-19.5/3.1.4/64
module load hdf5/pgi-19.5/openmpi-3.1.4/1.10.5
module load cudatoolkit/10.1

set HOME $::env(HOME)
set PETSC_VERSION 3.11.2

setenv PETSC_VERSION ${PETSC_VERSION}
setenv PETSC_DIR ${HOME}/packages/petsc-${PETSC_VERSION}
setenv PETSC_ARCH pgi
setenv SLEPC_DIR ${HOME}/packages/slepc-${PETSC_VERSION}

setenv GENEHOME ${HOME}/genecode
setenv GENEWORK ${HOME}/genecode
setenv GENESCAN ${HOME}/genecode/tools/perl/scanscript

