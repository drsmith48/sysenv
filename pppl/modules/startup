#%Module
#
# default modules and paths for PPPL computer system
#

set HOME $::env(HOME)
set SYSENVHOME $::env(SYSENVHOME)

module load make/4.2.1
module load git
module load anaconda3
module load idl/8.7.2

prepend-path PATH ${HOME}/local/bin
prepend-path PATH ${SYSENVHOME}/bin
prepend-path LD_LIBRARY_PATH ${HOME}/local/lib
prepend-path INCLUDE_PATH ${HOME}/local/include

prepend-path PYTHONPATH ${HOME}/python

prepend-path IDL_PATH ${HOME}/idl
